<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activity.ProfileActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white">
    <EditText
        android:id="@+id/activityProfileFullName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/full_name"
        android:paddingStart="10dp"
        android:inputType="textPersonName"
        android:paddingEnd="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_input"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:weightSum="2">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Русский"
            android:textSize="18sp"
            android:onClick="radioClick"
            android:id="@+id/activityProfileRadioRus"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="O'zbekcha"
            android:textSize="18sp"
            android:onClick="radioClick"
            android:id="@+id/activityProfileRadioUzb"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgbtnblue"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:id="@+id/activityProfileRegBtn"/>
</LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:src="@drawable/logo"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>